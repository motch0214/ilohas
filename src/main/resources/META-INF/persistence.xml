<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="ilohas">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.eighthours.ilohas.domain.market.data.MarketData</class>
        <class>com.eighthours.ilohas.domain.market.data.rates.InterestRate</class>
        <class>com.eighthours.ilohas.domain.market.data.fx.FxSpotRate</class>

        <!-- Attribute Converters -->
        <class>com.eighthours.ilohas.adapter.jpa.converter.CurrencyConverter</class>
        <class>com.eighthours.ilohas.adapter.jpa.converter.CurrencyPairConverter</class>
        <class>com.eighthours.ilohas.adapter.jpa.converter.TermConverter</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.connection.url" value="jdbc:h2:./db/test"/>
            <property name="hibernate.connection.provider_class"
                      value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>

    </persistence-unit>
</persistence>
